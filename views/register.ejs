<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Session Based - Register</title>
  </head>

  <body>
    <h2>Register Form</h2>

    <% if(messages.error){ %>
    <p style="color: red"><%= messages.error %></p>
    <% } %>

    <form action="/api/v1/register" method="POST">
      <div>
        <label for="name">Name :</label>
        <input type="text" id="name" name="name" required />
      </div>
      <div>
        <label for="email">Email :</label>
        <input type="email" id="email" name="email" required />
      </div>
      <div>
        <label for="password">Password :</label>
        <input type="text" id="password" name="password" required />
      </div>
      <div>
        <label for="identityType">Identity Type :</label>
        <input type="text" id="identityType" name="identityType" required />
      </div>
      <div>
        <label for="identityNumber">Identity Number :</label>
        <input type="text" id="identityNumber" name="identityNumber" required />
      </div>
      <div>
        <label for="address">Address :</label>
        <input type="text" id="address" name="address" required />
      </div>
      <input type="submit" value="Register" />
    </form>
  </body>
</html>
